<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="fill_parent"
    android:layout_width="match_parent"
    android:background="#fff"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"

        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <TextView android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            android:text="@string/app_name"
            android:textColor="#000000"
            android:textSize="21sp"
            android:textStyle="bold" />

        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="@string/version"
            android:textColor="#000000"
            android:textStyle="bold" />
        <ImageView
            android:layout_width="@dimen/aboutlogo"
            android:layout_height="@dimen/aboutlogo"
            android:layout_gravity="center"
            android:src="@drawable/logo"
         />

        <TextView android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="@string/copyright"
            android:textColor="#000000"
            android:textSize="@dimen/aboutwebcontact"
            android:textStyle="bold" />

        <TextView android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact us:"
            android:textColor="#000000"
            android:textSize="@dimen/aboutwebcontact"
            android:textStyle="bold" />
        <TextView android:id="@+id/mail"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="support@onelife2care.com"
            android:textColor="#2C3285"
            android:textSize="@dimen/aboutwebcontact"
            android:textStyle="bold|italic" />
        <TextView android:id="@+id/contact"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="9811442146"
            android:textColor="#2C3285"
            android:textSize="@dimen/aboutwebcontact"
            android:textStyle="bold|bold|italic" />
        <TextView android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Website:"
            android:textColor="#000000"
            android:textSize="@dimen/aboutwebcontact"
            android:textStyle="bold" />
        <TextView android:id="@+id/website"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="https://vividtechno.com/"
            android:textColor="#2C3285"
            android:textSize="@dimen/aboutwebcontact"
            android:textStyle="bold|bold|italic" />



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rateus"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:text="Rate Us"
            android:background="@drawable/background"></Button>





    </LinearLayout>
</ScrollView>